@model IEnumerable<ContraloriaNDSWeb.Models.Personeria>

@{
    ViewBag.Title = "Personerías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Administración de Personerías</h2>

<p>
    @Html.ActionLink("Nueva Personería", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.PersoneriaId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.PersoneriaId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.PersoneriaId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
