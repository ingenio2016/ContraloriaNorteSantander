@model IEnumerable<ContraloriaNDSWeb.Models.Directorio>

@{
    ViewBag.Title = "Contraloría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Directorio Contraloría</h2>

<p>
    @Html.ActionLink("Nuevo Registro", "Directorio_Crear", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Extension)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Extension)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Logo))
                {
                    <img src="@Url.Content(item.Logo)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                }
                else
                {
                    <img src="~/Content/Funcionarios/no-photo.png" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                }
            <td>
                @Html.ActionLink("Editar", "Directorio_Editar", new { id = item.DirectorioId }, new { @class = "btn btn-warning" })<br />
                @Html.ActionLink("Detalles", "Directorio_Detalle", new { id = item.DirectorioId }, new { @class = "btn btn-info" })<br />
                @Html.ActionLink("Borrar", "Directorio_Borrar", new { id = item.DirectorioId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
