@model ContraloriaNDSWeb.Models.PlanesProgramas

@{
    ViewBag.Title = "Contraloría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Administración Web</h2>

<div>
    <h4>Información del Plan de Programa</h4>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Adjunto)
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.Adjunto))
            {
                <a class="btn btn-link" href="@Url.Content(Model.Adjunto)" target="_blank">@Html.DisplayFor(modelItem => modelItem.Descripcion)</a>
            }        
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "PlanesProgramas_Editar", new { id = Model.PlanesProgramasId }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Volver al Listado", "Admin_PlanesProgramas", new { }, new { @class = "btn btn-success" })
</p>
