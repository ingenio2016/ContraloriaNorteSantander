@model ContraloriaNDSWeb.Models.Auditoria

@{
    ViewBag.Title = "Informe de Auditorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Administración Web</h2>

<div>
    <h4>Detalles de la auditoría</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Year.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Observacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observacion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Adjunto)
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.Adjunto))
            {
                <a class="btn btn-link" href="@Url.Content(Model.Adjunto)" target="_blank">@Html.DisplayFor(modelItem => modelItem.Descripcion)</a>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.AuditoriaId }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Volver al Listado", "Index", new { }, new { @class = "btn btn-success" })
</p>
