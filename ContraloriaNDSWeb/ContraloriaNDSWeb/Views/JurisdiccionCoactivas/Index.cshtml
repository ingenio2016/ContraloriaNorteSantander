@model IEnumerable<ContraloriaNDSWeb.Models.JurisdiccionCoactiva>

@{
    ViewBag.Title = "Jurisdicción Coactiva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nueva Jurisdicción", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adjunto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Adjunto))
                {
                    <a class="btn btn-link" href="@Url.Content(item.Adjunto)" target="_blank">@Html.DisplayFor(modelItem => item.Descripcion)</a>
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.JurisdiccionCoactivaId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.JurisdiccionCoactivaId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.JurisdiccionCoactivaId }, new { @class = "btn btn-danger" })


            </td>
        </tr>
    }

</table>
